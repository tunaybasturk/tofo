<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="275dp"


    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4D000000"
        android:layout_marginTop="15dp"
        android:elevation="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout11"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/urun_isim"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Közde Türk Kahvesi"
                android:textColor="#FFFFFF"
                android:textSize="17dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout12"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="100">


            <ImageView
                android:id="@+id/yildiz1"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginStart="-3dp"
                android:layout_marginLeft="50dp"
                android:layout_weight="20"
                app:srcCompat="@drawable/empty_star_icon" />

            <ImageView
                android:id="@+id/yildiz2"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginStart="3dp"
                android:layout_weight="20"
                app:srcCompat="@drawable/empty_star_icon" />

            <ImageView
                android:id="@+id/yildiz3"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginStart="3dp"
                android:layout_weight="20"
                app:srcCompat="@drawable/empty_star_icon" />

            <ImageView
                android:id="@+id/yildiz4"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginStart="3dp"
                android:layout_weight="20"
                app:srcCompat="@drawable/empty_star_icon" />

            <ImageView
                android:id="@+id/yildiz5"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginStart="3dp"
                android:layout_weight="20"
                app:srcCompat="@drawable/empty_star_icon" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/paylas_btn"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:backgroundTint="#0A8C9D"
                android:text="Paylaş"
                android:textAllCaps="false"

                android:textSize="17dp" />


        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/cancel_icon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/diyalog_yildiz_cancel_icon"
        android:elevation="5dp"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.958"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>