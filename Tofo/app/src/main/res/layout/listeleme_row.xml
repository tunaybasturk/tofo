<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="115dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/listeleme_border"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/urun_resim"
            android:layout_width="75dp"
            android:layout_height="95dp"
            android:layout_gravity="center"
            android:layout_marginStart="13dp"
            android:scaleType="centerCrop"
            android:src="@drawable/kozde_turk_kahvesi"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/urun_ismi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Közde Türk Kahvesi"
                android:textColor="#1C92A2"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/yildiz1"
                    android:layout_marginStart="-3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/listeleme_urun_yildiz" />

                <ImageView
                    android:id="@+id/yildiz2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/listeleme_urun_yildiz"
                 />

                <ImageView
                    android:id="@+id/yildiz3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/listeleme_urun_yildiz" />

                <ImageView
                    android:id="@+id/yildiz4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/listeleme_urun_yildiz" />

                <ImageView
                    android:id="@+id/yildiz5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/listeleme_urun_yildiz" />

            </LinearLayout>

            <TextView
                android:id="@+id/urun_yorum_sayisi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11 yorum yapıldı"
                android:textColor="@color/black"
                android:layout_marginTop="3dp"/>

            <TextView
                android:id="@+id/urun_uzaklik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="2 kilometre uzaklıkta" />

        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:orientation="vertical">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="end"
                    android:id="@+id/urun_kategori"
                    android:src="@drawable/anasayfa_icecekler"
                    android:scaleType="centerCrop"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">
                </de.hdodenhof.circleimageview.CircleImageView>



            <TextView
                android:id="@+id/urun_fiyati"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#138E9F"
                android:layout_marginTop="40dp"
                android:text="₺7,5"
                android:layout_gravity="end"
                android:textSize="25dp"
                android:textStyle="bold"
                />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>